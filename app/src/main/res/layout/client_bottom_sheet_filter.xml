<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="String" />
    </data>

    <LinearLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorScreenBg"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            style="@style/SecondaryNormalText"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@{item}"
            android:textAllCaps="true"
            android:textColor="@color/colorTertiaryText"
            tools:text="@string/leads_status" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal">

            <include
                android:id="@+id/includeClientLayout"
                layout="@layout/layout_client_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/includeSalesCenterLayout"
                layout="@layout/layout_client_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            style="@style/PrimaryBoldText"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/date_of_submission"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <include
                android:id="@+id/include_date_of_submission_start_date_layout"
                layout="@layout/layout_date_picker_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/include_date_of_submission_end_date_layout"
                layout="@layout/layout_date_picker_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


        <TextView
            style="@style/PrimaryBoldText"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/date_of_verification"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <include
                android:id="@+id/include_date_of_verification_start_date_layout"
                layout="@layout/layout_date_picker_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/include_date_of_verification_end_date_layout"
                layout="@layout/layout_date_picker_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnApply"
                style="@style/ButtonPrimary"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:text="Apply" />
        </LinearLayout>

    </LinearLayout>
</layout>