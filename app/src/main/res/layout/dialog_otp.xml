<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.network.resources.Resource" />

        <import type="com.tpv.android.network.error.ErrorHandler" />

        <import type="com.tpv.android.network.resources.apierror.APIError" />

        <variable
            name="resource"
            type="androidx.lifecycle.LiveData&lt;Resource&lt;Object,APIError>>" />

        <variable
            name="errorHandler"
            type="com.tpv.android.network.error.ErrorHandler" />

        <variable
            name="item"
            type="com.tpv.android.model.internal.DialogText" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="@dimen/_8sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/parentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        style="@style/PrimaryNormalText"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="@{item.title}"
                        tools:text="@string/enter_otp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.chaos.view.PinView
                            android:id="@+id/pinView"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:cursorVisible="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_14sdp"
                            app:cursorColor="@color/colorCursor"
                            app:hideLineWhenFilled="false"
                            app:itemCount="6"
                            app:itemSpacing="@dimen/_4sdp"
                            app:itemWidth="@dimen/_26sdp"
                            app:lineColor="@drawable/otp_selector"
                            app:lineWidth="@dimen/_2sdp"
                            app:viewType="line" />


                        <TextView
                            android:id="@+id/textResendOTP"
                            style="@style/SecondaryNormalText"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:text="@{item.description}"
                            android:textColor="@color/colorTertiaryText"
                            tools:text="@string/resend_otp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp">


                        <TextView
                            android:id="@+id/btnCancel"
                            style="@style/DialogCancelButton"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="8dp"
                            android:text="@{item.negativeButtonText}" />

                        <TextView
                            android:id="@+id/btnSubmit"
                            style="@style/DialogButton"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="0dp"
                            android:background="@drawable/button_background_state"
                            android:enabled="false"
                            android:text="@{item.positiveButtonText}" />

                    </LinearLayout>

                </LinearLayout>

                <include
                    android:id="@+id/incProgressBar"
                    layout="@layout/progress_bar"
                    app:errorHandler="@{errorHandler}"
                    app:resource="@{resource}"
                    app:useBlockingProgress="@{true}"
                    tools:visibility="visible" />
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>