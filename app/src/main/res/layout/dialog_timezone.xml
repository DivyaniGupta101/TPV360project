<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.network.resources.Resource" />

        <import type="com.tpv.android.network.error.ErrorHandler" />

        <import type="com.tpv.android.network.resources.apierror.APIError" />

        <variable
            name="resource"
            type="androidx.lifecycle.LiveData&lt;Resource&lt;Object,APIError>>" />

        <variable
            name="errorHandler"
            type="com.tpv.android.network.error.ErrorHandler" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="@dimen/_8sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/parentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        style="@style/PrimaryNormalText"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="@string/select_time_zone"
                        tools:text="@string/select_verification_method" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTimezone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_timezone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_8sdp">


                        <TextView
                            android:id="@+id/btnCancel"
                            style="@style/DialogCancelButton"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/cancel" />

                        <TextView
                            android:id="@+id/btnSubmit"
                            style="@style/DialogButton"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="0dp"
                            android:background="@drawable/button_background_state"
                            android:text="@string/save" />

                    </LinearLayout>

                </LinearLayout>

                <include
                    android:id="@+id/incProgressBar"
                    layout="@layout/progress_bar"
                    app:errorHandler="@{errorHandler}"
                    app:resource="@{resource}"
                    app:useBlockingProgress="@{true}"
                    tools:visibility="visible" />
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>