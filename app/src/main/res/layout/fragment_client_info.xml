<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.enrollment.form.gasdetailform.GasDetailFormFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SecondaryNormalText"
                    android:gravity="center"
                    android:padding="@dimen/_24sdp"
                    android:text="@string/msg_client_info" />

                <TextView
                    style="@style/PrimaryBoldText"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:text="@string/customer_name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiaryText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_22sdp"
                    android:paddingEnd="@dimen/_22sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/SecondaryNormalSmallText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/first_name" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="Smithan"
                                    tools:text="Smithan" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/SecondaryNormalSmallText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/middle_name" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="John"
                                    tools:text="John" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/SecondaryNormalSmallText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/last_name" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="Michel"
                                    tools:text="Michel" />
                            </LinearLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/imageEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="?selectableItemBackground"
                            android:src="@drawable/ic_writing_gray"
                            app:dynamicTintColor="@{R.color.colorSecondaryImageTint}" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/PrimaryBoldText"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    android:text="@string/plan_information"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiaryText" />

                <TextView
                    android:id="@+id/textGas"
                    style="@style/PrimaryBoldText"
                    android:paddingStart="@dimen/_16sdp"
                    android:text="@string/gas_programs"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiaryText"
                    tools:text="@string/electric_programs" />

                <LinearLayout
                    android:id="@+id/gasInforamtionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textElectric"
                    style="@style/PrimaryBoldText"
                    android:paddingStart="@dimen/_16sdp"
                    android:text="@string/electric_programs"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiaryText"
                    tools:text="@string/electric_programs" />

                <LinearLayout
                    android:id="@+id/electricInforamtionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/btnNext"
                    style="@style/ButtonPrimary"
                    android:text="@string/next" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>