<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.network.resources.Resource" />

        <import type="com.tpv.android.network.error.ErrorHandler" />

        <import type="com.tpv.android.network.resources.apierror.APIError" />

        <variable
            name="resource"
            type="androidx.lifecycle.LiveData&lt;Resource&lt;Object,APIError>>" />

        <variable
            name="errorHandler"
            type="com.tpv.android.network.error.ErrorHandler" />

        <variable
            name="item"
            type="com.tpv.android.model.network.UserDetail" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_24sdp"
                    tools:context=".ui.salesagent.home.profile.ProfileFragment">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageProfile"
                            style="@style/ProfileImage"
                            android:layout_gravity="center"
                            android:elevation="@dimen/_2sdp"
                            app:name="@{item.firstName + ' ' + item.lastName}"
                            app:url="@{item.profilePicture}"
                            tools:src="@drawable/dummy_person" />

                        <LinearLayout
                            android:id="@+id/imgCamera"
                            style="@style/CameraContainer"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/bg_round_accent"
                            android:elevation="@dimen/_2sdp"
                            android:gravity="center">

                            <ImageView
                                style="@style/CameraImage"
                                android:src="@drawable/ic_camera_white_16dp" />

                        </LinearLayout>

                    </FrameLayout>

                    <TextView
                        style="@style/SecondaryNormalText"
                        android:layout_marginTop="50dp"
                        android:text="@string/full_name" />

                    <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:focusable="false"
                            android:text="@{item.firstName + ' ' + item.lastName}"
                            android:textColor="@color/colorPrimaryText"
                            tools:text="Patricia Davidson" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        style="@style/SecondaryNormalText"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="@string/email_address" />

                    <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="textEmailAddress"
                            android:text="@{item.email}"
                            android:textColor="@color/colorPrimaryText"
                            tools:text="patricia24@gmail.com" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalText"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="@string/agent_id"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayout"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="textEmailAddress"
                            android:text="@{item.userid}"
                            android:textColor="@color/colorPrimaryText"
                            tools:text="patricia24@gmail.com" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalText"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="@string/sales_center_name"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayout"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="textEmailAddress"
                            android:text="@{item.salesCenterName}"
                            android:textColor="@color/colorPrimaryText"
                            tools:text="patricia24@gmail.com" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalText"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="@string/sales_center_id"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayout"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="textEmailAddress"
                            android:text="@{item.salescenterId}"
                            android:textColor="@color/colorPrimaryText"
                            tools:text="patricia24@gmail.com" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalText"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="@string/client_name" />

                    <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="textEmailAddress"
                            android:text="@{item.clientName}"
                            android:textColor="@color/colorPrimaryText"
                            tools:text="patricia24@gmail.com" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </ScrollView>

            <include
                android:id="@+id/incProgressBar"
                layout="@layout/progress_bar"
                app:errorHandler="@{errorHandler}"
                app:resource="@{resource}"
                app:useBlockingProgress="@{true}"
                tools:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

</layout>