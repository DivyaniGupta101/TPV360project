<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />


        <import type="com.tpv.android.network.resources.Resource" />

        <import type="com.tpv.android.network.error.ErrorHandler" />

        <import type="com.tpv.android.network.resources.apierror.APIError" />

        <variable
            name="resource"
            type="androidx.lifecycle.LiveData&lt;Resource&lt;Object,APIError>>" />

        <variable
            name="errorHandler"
            type="com.tpv.android.network.error.ErrorHandler" />

        <variable
            name="item"
            type="com.tpv.android.model.network.ClientLeadDetailResp" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:id="@+id/parentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp">

                        <TextView
                            style="@style/PrimaryBoldText"
                            android:layout_width="wrap_content"
                            android:text="@string/lead_id_colon"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            style="@style/PrimaryNormalText"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:text="@{item.leadData.id}"
                            tools:text="142044" />

                        <TextView
                            style="@style/PrimaryNormalSmallText"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{item.leadData.status}"
                            app:leadStatus="@{item.leadData.status}"
                            tools:text="142044" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp">

                        <TextView
                            style="@style/PrimaryBoldText"
                            android:layout_width="wrap_content"
                            android:text="@string/lead_submission_on_colon"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            style="@style/PrimaryNormalText"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="@{item.leadData.leadSubmissionOn}"
                            tools:text="142044" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp">

                        <TextView
                            style="@style/PrimaryBoldText"
                            android:layout_width="wrap_content"
                            android:text="@string/lead_updated_on_colon"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            style="@style/PrimaryNormalText"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="@{item.leadData.lastUpdatedOn}"
                            tools:text="142044" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <LinearLayout
                            android:id="@+id/agentContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/agent"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.salesagentName}"
                                    tools:text="142044" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/id_colon"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.id}"
                                    tools:text="142044" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/email_colon"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.email}"
                                    tools:text="142044" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <LinearLayout
                            android:id="@+id/clientContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/client_colon"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.clientName}"
                                    tools:text="142044" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/sales_center_colon"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.salescenterName}"
                                    tools:text="142044" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/sales_center_location_colon"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.salescenterLocationName}"
                                    tools:text="142044" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/PrimaryBoldText"
                                    android:layout_width="wrap_content"
                                    android:text="@string/channel_colon"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    style="@style/PrimaryNormalText"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:text="@{item.salesAgent.agentType}"
                                    android:textAllCaps="true"
                                    tools:text="142044" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/leadDetailContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp">


                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <include
                android:id="@+id/incProgressBar"
                layout="@layout/progress_bar"
                app:errorHandler="@{errorHandler}"
                app:resource="@{resource}"
                app:useBlockingProgress="@{true}"
                tools:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

</layout>