<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />


        <import type="com.tpv.android.network.resources.Resource" />

        <import type="com.tpv.android.network.error.ErrorHandler" />

        <import type="com.tpv.android.network.resources.apierror.APIError" />

        <variable
            name="resource"
            type="androidx.lifecycle.LiveData&lt;Resource&lt;Object,APIError>>" />

        <variable
            name="errorHandler"
            type="com.tpv.android.network.error.ErrorHandler" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.salesagent.home.leadlisting.LeadListingFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorScreenBg">

                    <include
                        android:id="@+id/paginated_layout"
                        layout="@layout/layout_paginated_state" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/containerSearchResultText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textSearchResult"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/colorBlack"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/imageClose"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/quantum_ic_clear_grey600_24"/>


                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listReports"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:clipToPadding="false"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_50sdp"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            tools:listitem="@layout/item_client_reports" />

                    </LinearLayout>
                </FrameLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:background="@color/colorDarkDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sortByContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/_12sdp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:rotation="180"
                            android:src="@drawable/ic_sort_white_32dp"
                            app:dynamicTintColor="@{R.color.colorSecondaryImageTint}" />

                        <TextView
                            android:id="@+id/textSortBy"
                            style="@style/SecondaryNormalText"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:text="Sort By" />


                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/colorDarkDivider" />

                    <LinearLayout
                        android:id="@+id/filterContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/_12sdp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:rotation="180"
                            android:src="@drawable/ic_filtter_white_32dp"
                            app:dynamicTintColor="@{R.color.colorSecondaryImageTint}" />

                        <TextView
                            android:id="@+id/textFilter"
                            style="@style/SecondaryNormalText"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:text="Filter" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <include
                android:id="@+id/incProgressBar"
                layout="@layout/progress_bar"
                app:errorHandler="@{errorHandler}"
                app:resource="@{resource}"
                app:useBlockingProgress="@{true}"
                tools:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_search_32dp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_14sdp"/>


        </FrameLayout>


    </LinearLayout>

</layout>