<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.ui.home.enrollment.SetEnrollViewModel" />

        <import type="com.tpv.android.utils.Plan" />

        <variable
            name="viewModel"
            type="SetEnrollViewModel" />

        <variable
            name="item"
            type="com.tpv.android.model.CustomerData" />

        <variable
            name="plan"
            type="Plan" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.enrollment.form.gasdetailform.GasDetailFormFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/PrimaryBoldText"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:text="@string/electric_detail"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiaryText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    android:paddingBottom="@dimen/_24sdp">


                    <TextView
                        style="@style/SecondaryNormalText"
                        android:text="@string/service_address" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputServiceAddress"
                        style="@style/TextInputLayout">

                        <LinearLayout style="@style/SquareBorderTextLinearLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editServiceAddress"
                                style="@style/SquareBorderEditText"
                                android:text="@{item.serviceAddress}" />
                        </LinearLayout>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/zip_code" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputServiceZipCode"
                        style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editServiceZipCode"
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:text="@{viewModel.zipcode.zipcode}"
                            android:textColor="@color/colorSecondaryText" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/billing_address_msg" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioYes"
                            style="@style/CheckBoxButton"
                            android:layout_marginStart="0dp"
                            android:checked="@{viewModel.isElectricServiceAddressSame()? true : false}"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/radioNo"
                            style="@style/CheckBoxButton"
                            android:checked="@{viewModel.isElectricServiceAddressSame()? false : true}"
                            android:text="@string/no"
                            tools:checked="true" />
                    </RadioGroup>

                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/billing_address" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputBillingAddress"
                        style="@style/TextInputLayout">

                        <LinearLayout style="@style/SquareBorderTextLinearLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editBillingAddress"
                                style="@style/SquareBorderEditText"
                                android:enabled="@{!viewModel.isElectricServiceAddressSame()}"
                                android:text="@{viewModel.planType == plan.DUALFUEL.value ? item.electricBillingAddress : item.billingAddress }"
                                android:textColor="@{viewModel.isElectricServiceAddressSame() ? @color/colorSecondaryText : @color/colorPrimaryText}" />

                        </LinearLayout>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/zip_code" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputZipCode"
                        style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editZipCode"
                            style="@style/DefaultEditText"
                            android:enabled="false"
                            android:text="@{viewModel.zipcode.zipcode}"
                            android:textColor="@color/colorSecondaryText" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/billing_first_name" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputBillingFirstName"
                        style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editBillingFirstName"
                            style="@style/DefaultEditText"
                            android:text="@{viewModel.planType == plan.DUALFUEL.value ? item.electricBillingFirstName : item.billingFirstName }" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/billing_middle_name" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputBillingMiddleName"
                        style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editBillingMiddleName"
                            style="@style/DefaultEditText"
                            android:text="@{viewModel.planType == plan.DUALFUEL.value ? item.electricBillingMiddleInitial : item.billingMiddleInitial }" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/billing_last_name" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputBillingLastName"
                        style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editBillingLastName"
                            style="@style/DefaultEditText"
                            android:text="@{viewModel.planType == plan.DUALFUEL.value ? item.electricBillingLastName : item.billingLastName }" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        style="@style/SecondaryNormalTextWithTopSpacing"
                        android:text="@string/account_number" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputAccountNumber"
                        style="@style/TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editAccountNumber"
                            style="@style/DefaultEditText"
                            android:inputType="phone"
                            android:text="@{viewModel.planType == plan.DUALFUEL.value ? item.electricAccountNumber : item.accountNumber }" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_unselected_page_indicator"
                            app:visibleIf="@{viewModel.planType == plan.DUALFUEL.value}" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            app:visibleIf="@{viewModel.planType == plan.DUALFUEL.value}" />


                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_unselected_page_indicator" />


                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_selected_page_indicator" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnNext"
                        style="@style/ButtonPrimary"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="@string/next" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>