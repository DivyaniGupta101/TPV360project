<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.planszipcode.PlansZipcodeFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_24sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/undraw_note_list_etto" />


                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:text="@string/enter_zipcode" />

                <AutoCompleteTextView
                    android:id="@+id/textZipcode"
                    style="@style/PrimaryNormalText"
                    android:layout_width="match_parent" />

                <TextView
                    android:id="@+id/textGas"
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/select_gas_utility"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <Spinner
                    android:id="@+id/spinnerGas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/dividerGas"
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textElectric"
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/select_electric_utility"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <Spinner
                    android:id="@+id/spinnerElectricity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/dividerElectric"
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/btnNext"
                    style="@style/ButtonPrimary"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="@string/next" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>