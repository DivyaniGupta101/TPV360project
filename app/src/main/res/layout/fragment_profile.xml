<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="item"
            type="com.tpv.android.model.UserDetail" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorScreenBg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_24sdp"
                tools:context=".ui.home.profile.ProfileFragment">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:elevation="@dimen/_1sdp"
                    app:name="@{item.firstName + ' ' + item.lastName}"
                    tools:src="@drawable/dummy_person" />

                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="@string/username" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DefaultEditText"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:text="@{item.firstName + ' ' + item.lastName}"
                        tools:text="Patricia Davidson" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    style="@style/SecondaryNormalTextWithTopSpacing"
                    android:layout_gravity="start"
                    android:text="@string/email_address" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DefaultEditText"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:text="@{item.email}"
                        tools:text="patricia24@gmail.com" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>