<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="item"
            type="com.tpv.android.model.network.UserDetail" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_24sdp"
                tools:context=".ui.salesagent.home.profile.ProfileFragment">


                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/ProfileImage"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_2sdp"
                    app:name="@{item.firstName + ' ' + item.lastName}"
                    tools:src="@drawable/dummy_person" />

                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="50dp"
                    android:text="@string/full_name" />

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textFullName"
                        style="@style/DefaultEditText"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryText"
                        app:primaryValue="@{item.firstName + ' ' + item.lastName}"
                        app:secondaryText="@{@string/id}"
                        app:secondaryValue="@{item.userid}"
                        tools:text="Patricia Davidson" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/email_address" />

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DefaultEditText"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:text="@{item.email}"
                        android:textColor="@color/colorPrimaryText"
                        tools:text="patricia24@gmail.com" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/client" />

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DefaultEditText"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorPrimaryText"
                        app:primaryValue="@{item.clientName}"
                        app:secondaryText="@{@string/id}"
                        app:secondaryValue="@{item.clientId}"
                        tools:text="patricia24@gmail.com" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/sales_centers" />

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DefaultEditText"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorPrimaryText"
                        app:primaryValue="@{item.salesCenterName}"
                        app:secondaryText="@{@string/id}"
                        app:secondaryValue="@{item.salescenterId}"
                        tools:text="patricia24@gmail.com" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/SecondaryNormalText"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/time_zone" />

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/DefaultEditText"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorPrimaryText"
                        app:applyTint="@{@drawable/ic_edit_white_16dp}"
                        app:primaryValue="@{item.salesCenterName}"
                        app:secondaryText="@{@string/id}"
                        app:secondaryValue="@{item.salescenterId}"
                        tools:text="patricia24@gmail.com" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>