<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.enrollment.form.CustomerDetailFormOneFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            style="@style/PrimaryBoldText"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:text="@string/customer_name"
            android:textAllCaps="true"
            android:textColor="@color/colorTertiaryText" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/_24sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_24sdp"
            android:paddingBottom="@dimen/_24sdp">


            <TextView
                style="@style/SecondaryNormalText"
                android:gravity="center"
                android:text="@string/msg_recording" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp">

                <ImageView
                    android:id="@+id/graySpeakerImage"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/ic_speaker_gray"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/redSpeakerImage"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/ic_speaker_red"
                    android:visibility="gone" />
            </FrameLayout>

            <Chronometer
                android:id="@+id/chronometer"
                style="@style/PrimaryMediumBoldText"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textTimer"
                style="@style/PrimaryMediumBoldText"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/start_time" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp">

                <ImageView
                    android:id="@+id/audioStartImage"
                    style="@style/RecordingImage"
                    android:src="@drawable/ic_audio_start_black"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/audioStopImage"
                    style="@style/RecordingImage"
                    android:src="@drawable/ic_audio_stop_black"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/recordStartImage"
                    style="@style/RecordingImage"
                    android:src="@drawable/ic_record_start_black"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/recordStopImage"
                    style="@style/RecordingImage"
                    android:src="@drawable/ic_record_stop_black"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/recordAgainContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="?selectableItemBackground"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_replay_gray" />

                <TextView
                    style="@style/SecondaryBoldText"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/record_again" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/ButtonPrimary"
            android:text="@string/next" />
    </LinearLayout>
</layout>