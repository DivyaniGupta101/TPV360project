<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.enrollment.form.CustomerDetailFormOneFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            style="@style/PrimaryBoldText"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:text="@string/customer_name"
            android:textAllCaps="true"
            android:textColor="@color/colorTertiaryText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/_24sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_24sdp"
            android:paddingBottom="@dimen/_24sdp">


            <TextView
                style="@style/SecondaryNormalText"
                android:gravity="center"
                android:text="@string/msg_recording" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp">

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/ic_speaker_gray" />

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/ic_speaker_red" />
            </FrameLayout>

            <TextView
                android:id="@+id/textPending"
                style="@style/PrimaryMediumBoldText"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="00:00" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp">

                <ImageView
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/bg_round_border"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_play_black" />

                <ImageView
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/bg_round_border"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_pause_black" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            style="@style/ButtonPrimary"
            android:text="@string/next" />
    </LinearLayout>
</layout>