<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.network.resources.Resource" />

        <import type="com.tpv.android.network.error.ErrorHandler" />

        <import type="com.tpv.android.network.resources.apierror.APIError" />

        <import type="com.tpv.android.R" />

        <variable
            name="resource"
            type="androidx.lifecycle.LiveData&lt;Resource&lt;Object,APIError>>" />

        <variable
            name="errorHandler"
            type="com.tpv.android.network.error.ErrorHandler" />


        <variable
            name="item"
            type="com.tpv.android.model.network.CustomerData" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        style="@style/PrimaryBoldText"
                        android:text="@string/contract_detail"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTertiaryText" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/SecondaryNormalSmallText"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/account_holder_name" />

                            <TextView
                                style="@style/PrimaryBoldText"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{item.authorizedFirstName+ ' '+ item.authorizedLastName}"
                                tools:text="smithan michel" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/SecondaryNormalSmallText"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{@string/phone_number + ' ' +':'}" />

                            <TextView
                                style="@style/PrimaryBoldText"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@{item.phoneNumber}"
                                tools:text="smithan michel" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/SecondaryNormalText"
                        android:text="@string/msg_statement" />

                    <CheckBox
                        android:id="@+id/checkContract"
                        style="@style/SecondaryLightNormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:gravity="top"
                        android:text="@string/msg_agree_statement" />


                    <TextView
                        style="@style/PrimaryNormalText"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="@string/signature" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/square_gray_border"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/imageSign"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="2:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textTapToOpen"
                            style="@style/SecondaryNormalText"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text="@string/tap_to_open"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/btnNext"
                        style="@style/ButtonPrimary"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/button_background_state"
                        android:enabled="false"
                        android:text="@string/next" />
                </LinearLayout>
            </ScrollView>

            <include
                android:id="@+id/incProgressBar"
                layout="@layout/progress_bar"
                app:errorHandler="@{errorHandler}"
                app:resource="@{resource}"
                app:useBlockingProgress="@{true}"
                tools:visibility="visible" />
        </FrameLayout>
    </LinearLayout>
</layout>