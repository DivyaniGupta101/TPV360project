<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.tpv.android.model.LeadResp" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SecondaryNormalSmallText"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="@string/id" />

                        <TextView
                            style="@style/PrimaryBoldText"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:text="@{item.refrenceId}"
                            tools:text="It-it-ios-12657" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SecondaryNormalSmallText"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="@string/date" />

                        <TextView
                            style="@style/SecondaryBoldText"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            app:setDate="@{item.createTime}"
                            tools:text="27/08/2018" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SecondaryNormalSmallText"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="@string/time" />

                        <TextView
                            style="@style/SecondaryBoldText"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            app:time="@{item.createTime}"
                            tools:text="09:36:06" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/textPendingStatus"
                    style="@style/PrimaryBoldText"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorPendingText"
                    android:visibility="visible"
                    app:leadStatus="@{item.status}"
                    tools:text="@string/pending"
                    tools:visibility="visible" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>