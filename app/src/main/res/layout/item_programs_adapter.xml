<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp">
        <TextView
            style="@style/PrimaryBoldText"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textAllCaps="true"
            android:id="@+id/utility_name"
            android:textColor="@color/colorTertiaryText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/bg_rectangle_border"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PrimaryBoldText"
                            android:maxLines="1"
                            android:id="@+id/program_name"
                            />

                        <TextView
                            style="@style/SecondaryNormalSmallText"
                            android:maxLines="1"
                            android:id="@+id/premise_type_name" />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageEnroll"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_gradient_fab"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_right_white"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SecondaryNormalSmallText"
                            android:id="@+id/code"
                            android:text="@string/code" />

                        <TextView
                            style="@style/PrimaryNormalSmallText"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:id="@+id/program_code"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="horizontal">

                        <View
                            style="@style/DividerPrimary"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp" />

                        <TextView
                            style="@style/PrimaryBoldText"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:id="@+id/program_rate"
                            android:textSize="@dimen/_10sdp"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SecondaryNormalSmallText"
                                android:text="@string/term" />

                            <TextView
                                style="@style/PrimaryNormalSmallText"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:id="@+id/item_term"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SecondaryNormalSmallText"
                                android:text="@string/MSF" />

                            <TextView
                                style="@style/PrimaryNormalSmallText"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:id="@+id/monthlymnsf"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SecondaryNormalSmallText"
                                android:text="@string/early_termination" />

                            <TextView
                                style="@style/PrimaryNormalSmallText"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:id="@+id/terminate_fees"
                                />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/customFieldsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>