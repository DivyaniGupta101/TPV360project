<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />

        <variable
            name="item"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_16sdp">

        <TextView
            style="@style/PrimaryNormalText"
            android:layout_width="match_parent"
            android:text="@{item}"
            tools:text="142044" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPhoneNumber"
            style="@style/TextInputLayout"
            app:hintEnabled="false">

            <FrameLayout
                android:id="@+id/parentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDatePicker"
                    style="@style/DefaultEditText"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/bg_divider"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/select"
                    android:paddingEnd="52dp" />

                <ImageView
                    android:id="@+id/imageArrowDown"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_arrow_down_white_32dp"
                    app:dynamicTintColor="@{R.color.colorSecondaryImageTint}" />
            </FrameLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</layout>