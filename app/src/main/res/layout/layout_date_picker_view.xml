<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tpv.android.R" />

        <variable
            name="item"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/PrimaryNormalText"
            android:layout_width="match_parent"
            android:text="@{item}"
            tools:text="142044" />

        <LinearLayout
            android:id="@+id/linerLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textDate"
                style="@style/AddressFormTextInputLayout"
                android:layout_width="0dp"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDatePicker"
                    style="@style/DefaultEditText"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/select" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_down_white_32dp"
                app:dynamicTintColor="@{R.color.colorSecondaryImageTint}" />
        </LinearLayout>

    </LinearLayout>
</layout>