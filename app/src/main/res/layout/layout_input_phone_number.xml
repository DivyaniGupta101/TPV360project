<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.tpv.android.model.network.DynamicFormResp" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            style="@style/SecondaryNormalTextWithTopSpacing"
            android:text="@{item.label}"
            android:textAllCaps="true"
            android:textColor="@color/colorTertiaryText"
            tools:text="phone_number" />

        <TextView
            style="@style/SecondaryNormalTextWithTopSpacing"
            visibleIf="@{item.meta.placeHolder != null}"
            android:text="@{item.meta.placeHolder}" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_vertical" />

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/colorDarkDivider" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputPhoneNumber"
                style="@style/TextInputLayout"
                app:hintEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPhoneNumber"
                            style="@style/DefaultEditText"
                            android:layout_height="@dimen/_36sdp"
                            android:background="@drawable/bg_divider"
                            android:digits="@string/number_char"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingEnd="52dp" />


                        <TextView
                            android:id="@+id/textVerify"
                            style="@style/PrimaryNormalText"
                            visibleIf="@{item.validations.verify}"
                            android:layout_gravity="center_vertical|end"
                            android:background="?selectableItemBackground"
                            android:padding="@dimen/_8sdp"
                            android:text="@string/verify"
                            android:textColor="@color/colorTertiaryText" />
                    </FrameLayout>
                </LinearLayout>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</layout>