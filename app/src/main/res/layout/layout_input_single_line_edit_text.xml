<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="item"
            type="com.tpv.android.model.network.DynamicFormResp" />

        <variable
            name="key"
            type="com.tpv.android.utils.AppConstant" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTitle"
                style="@style/TertiaryBoldTextWithTopSpacing"
                android:layout_weight="1"
                android:text="@{item.label}"
                android:maxLines="2"
                android:textAllCaps="true"
                android:layout_marginEnd="@dimen/_8sdp"
                app:visibleIf="@{!TextUtils.isEmpty(item.label)}"
                tools:text="Full name" />

            <TextView
                android:id="@+id/textCopyFrom"
                style="@style/SecondaryNormalSmallText"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/copy_from"
                android:textColor="@color/colorTertiaryText"
                app:visibleIf="@{item.meta.isAllowCopy}" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_marginStart="@dimen/_8sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                style="@style/DefaultEditText"
                android:hint="@{item.meta.placeHolder}"
                android:text='@={item.values[key.VALUE]}'
                android:textAllCaps="@{item.meta.isAllCaps}"
                app:editTextMaxLength="@{item.validations.length}" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</layout>