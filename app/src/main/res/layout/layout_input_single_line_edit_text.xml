<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.tpv.android.model.network.DynamicFormResp" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            style="@style/SecondaryNormalTextWithTopSpacing"
            android:text="@{item.label}"
            android:textAllCaps="true"
            android:textColor="@color/colorTertiaryText"
            tools:text="Full name" />

        <TextView
            style="@style/SecondaryNormalTextWithTopSpacing"
            visibleIf="@{item.meta.placeHolder != null}"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@{item.meta.placeHolder}"
            tools:text="@string/last_name" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_marginStart="@dimen/_8sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                style="@style/DefaultEditText"
                android:text="@={item.values.value}" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</layout>