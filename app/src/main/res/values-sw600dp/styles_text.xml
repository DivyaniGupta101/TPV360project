<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="PrimaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SecondaryNormalText" parent="PrimaryNormalText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="PrimaryBoldText" parent="PrimaryNormalText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="SecondaryBoldText" parent="SecondaryNormalText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>

    </style>

    <style name="PrimaryBigBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="DefaultEditText" parent="PrimaryNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
    </style>


</resources>