<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--    Regular Normal-->
    <style name="PrimaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <!--    Big Bold-->
    <style name="PrimaryBigBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!--    Medium Bold-->
    <style name="PrimaryMediumBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <!--    Medium Regular-->
    <style name="SecondaryMediumNormalText" parent="SecondaryNormalText">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!--    Small Normal-->
    <style name="PrimaryNormalSmallText" parent="PrimaryNormalText">
        <item name="android:textSize">@dimen/_6sdp</item>
    </style>

    <style name="SecondaryNormalSmallText" parent="SecondaryNormalText">
        <item name="android:textSize">@dimen/_6sdp</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="SquareBorderEditText" parent="PrimaryNormalText">
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
    </style>
</resources>