<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:editTextStyle">@style/TextInputLayout</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Splash-->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


    <style name="spinnerTheme">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--    Button-->
    <style name="ButtonPrimary">
        <item name="android:foreground">@drawable/rounded_ripple_effect</item>
        <item name="android:background">@drawable/bg_gradient_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>

    </style>


    <!--Dialog-->
    <style name="DialogButton" parent="ButtonPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="DialogCancelButton" parent="DialogButton">
        <item name="android:background">@drawable/bg_rectangle_with_radius_border</item>
        <item name="android:textColor">@color/colorCancelButtonBorder</item>
    </style>

    <style name="BorderButtonWithEnable" parent="DialogButton">
        <item name="android:background">@drawable/button_border_background_state</item>
        <item name="android:textColor">@color/colorCancelButtonBorder</item>
    </style>

    <style name="ButtonWithEnable" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_background_state</item>
        <item name="android:textColor">@color/colorCancelButtonBorder</item>
    </style>
    <!-- Divider-->
    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="DividerPrimary">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/_2sdp</item>
        <item name="android:background">@color/colorPlansDivider</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>


    <!--    Toolbar-->
    <style name="ToolbarImage">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>


    <!--    DashBoard-->
    <style name="DashboardMenuItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DashboardItem">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/_18sdp</item>
    </style>

    <style name="DashboardLeadText" parent="SecondaryNormalSmallText">
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--SlideMenuItem-->
    <style name="SlideMenuItemImage">
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
    </style>

    <style name="SlideMenuItemProfileImage">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="SlideMenuItemText" parent="PrimaryNormalText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
    </style>


    <!--    FabButton-->
    <style name="FabButton">
        <item name="android:layout_width">@dimen/_38sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>


    <!--    ProfileImage-->
    <style name="ProfileImage">
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_width">@dimen/_80sdp</item>
        <!--        <item name="android:layout_marginTop">@dimen/_24sdp</item>-->
    </style>

    <style name="CameraContainer">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
    </style>

    <style name="CameraImage">
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>


    <style name="SecondaryNormalTextWithTopSpacing" parent="SecondaryNormalText">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="TertiaryBoldTextWithTopSpacing" parent="PrimaryBoldText">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorTertiaryText</item>

    </style>


    <!--    Details Forms-->
    <style name="CheckBoxButton" parent="PrimaryNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
    </style>

    <style name="SquareBorderTextLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/square_gray_border</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
    </style>


    <!--    Recording-->
    <style name="RecordingImage">
        <item name="android:layout_width">@dimen/_36sdp</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:background">@drawable/bg_round_border</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:foreground">@drawable/rounded_ripple_effect</item>

    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RecordingWaves">
        <item name="barPerSec">12</item>
        <item name="speed">14</item>
        <item name="waveformStrokeThickness">22</item>
    </style>

    <style name="MenuBGImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/bg_slide_menu</item>
    </style>

    <style name="IconImage">
        <item name="android:layout_width">@dimen/_130sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:src">@drawable/ic_company_logo_black</item>
    </style>
</resources>
