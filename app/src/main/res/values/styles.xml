<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:editTextStyle">@style/DefaultEditText</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="DarkBoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkBoldText.DashboardMenuCountTitle">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="LightNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="DarkNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:foreground">@drawable/rounded_ripple_effect</item>
        <item name="android:background">@drawable/bg_gradient_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <!--        <item name="android:layout_marginStart">@dimen/_28sdp</item>-->
        <!--        <item name="android:layout_marginEnd">@dimen/_28sdp</item>-->
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>

    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">@dimen/_2sdp</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="ToolbarImage">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <style name="DashboardMenuItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
