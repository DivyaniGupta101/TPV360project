<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:editTextStyle">@style/DefaultEditText</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


    <style name="ButtonPrimary">
        <item name="android:foreground">@drawable/rounded_ripple_effect</item>
        <item name="android:background">@drawable/bg_gradient_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>

    </style>


    <style name="Divider">
        <item name="android:layout_width">@dimen/_2sdp</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!--    Toolbar-->

    <style name="ToolbarImage">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <style name="ToolbarTitle" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <!--    Dashboard-->
    <style name="DashboardMenuItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DashboardMenuItemCountPrimaryBoldText" parent="PrimaryBigBoldText">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>


    <!--SlideMenuItem-->
    <style name="SlideMenuItemImage">
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SlideMenuItemText" parent="PrimaryNormalText">
        <item name="android:layout_weight">4</item>

    </style>
</resources>
