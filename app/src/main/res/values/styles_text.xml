<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Regular Normal-->
    <style name="PrimaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SecondaryNormalText" parent="PrimaryNormalText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="SecondaryLightNormalText" parent="PrimaryNormalText">
        <item name="android:textColor">@color/colorSecondaryLighText</item>
    </style>


    <!-- Regular Bold-->
    <style name="PrimaryBoldText" parent="PrimaryNormalText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="SecondaryBoldText" parent="SecondaryNormalText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>


    <!--    Big Bold-->
    <style name="PrimaryBigBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!--    Medium Bold-->
    <style name="PrimaryMediumBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!--    Small Normal-->
    <style name="PrimaryNormalSmallText" parent="PrimaryNormalText">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SecondaryNormalSmallText" parent="SecondaryNormalText">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <!--    EditText-->
    <style name="DefaultEditText" parent="PrimaryNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
    </style>
    <style name="SingleLineEditText" parent="DefaultEditText">
       <item name="android:maxLines">1</item>
    </style>

</resources>