<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Regular Normal-->
    <style name="PrimaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SecondaryNormalText" parent="PrimaryNormalText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="SecondaryLightNormalText" parent="PrimaryNormalText">
        <item name="android:textColor">@color/colorSecondaryLighText</item>
    </style>



    <!-- Regular Bold-->
    <style name="PrimaryBoldText" parent="PrimaryNormalText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="SecondaryBoldText" parent="SecondaryNormalText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>


    <!--    Big Bold-->
    <style name="PrimaryBigBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!--    Medium Bold-->
    <style name="PrimaryMediumBoldText" parent="PrimaryBoldText">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--    Medium Regular-->
    <style name="SecondaryMediumNormalText" parent="SecondaryNormalText">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>


    <!--    Small Normal-->
    <style name="PrimaryNormalSmallText" parent="PrimaryNormalText">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SecondaryNormalSmallText" parent="SecondaryNormalText">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <!--    EditText-->

    <style name="TextInputLayout" parent="PrimaryNormalText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AddressFormTextInputLayout" parent="TextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:inputType">text|textCapSentences</item>
    </style>

    <style name="SquareBorderEditText" parent="PrimaryNormalText">
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
    </style>
</resources>